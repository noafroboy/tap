:javascript
  $(document).ready(function() {
    if ("#{@controller.params[:action]}" === 'edit') {
      $(".red-asterisk").hide();
    }
  });
  
= form_for @user do |f|
  -if @user.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    .label-container
      Email
      %span.red-asterisk *(this will be used for your login)
    = f.text_field :email
  .field
    .label-container
      Password
      %span.red-asterisk *
    = f.password_field :password
  .field
    .label-container
      Password Confirmation
      %span.red-asterisk *
    = f.password_field :password_confirmation
  .field
    .label-container
      First Name
      %span.red-asterisk *
    = f.text_field :first_name
  .field
    .label-container Middle Name
    = f.text_field :middle_name
  .field
    .label-container
      Last Name
      %span.red-asterisk *
    = f.text_field :last_name
  .field
    .label-container
      Gender
      %span.red-asterisk *
    = f.select :gender, ["male", "female"]
  .field
    .label-container Age Group
    = f.select :age_group, ["", "18-21", "22-25", "26-30", "31-35", "36-40", "41+"]
  .field
    .label-container
      Cell Phone #
      %span{:style => "font-size: 90%"} (e.g. 408-621-2054)
    = f.text_field :cellphone_number
  .field
    .label-container Home Phone #
    = f.text_field :homephone_number
  .field
    .label-container Work Phone #
    = f.text_field :workphone_number
  .field
    .label-container Street Address
    = f.text_field :street_address
  .field
    .label-container City
    = f.text_field :city
  .field
    .label-container State
    = f.text_field :state
  .field
    .label-container Zip Code
    = f.text_field :zip_code
  .field
    .label-container Undergraduate School
    = f.text_field :undergrad_school
  .field
    .label-container Undergraduate Major
    = f.text_field :undergrad_major
  .field
    .label-container Graduate School
    = f.text_field :graduate_school
  .field
    .label-container Graduate Major
    = f.text_field :graduate_major
  .field
    .label-container Other Degrees
    = f.text_field :other_degrees
  .field
    .label-container What Industry/Field are you in?
    = f.text_field :industry_field
  .field
    .label-container Name of Company you work for?
    = f.text_field :company_name
  .field
    .label-container What's your Title/Position/Job Function
    = f.text_field :title_position_function
  .field
    .label-container Years of Experience In Your Field
    = f.select :years_experience, options_for_select(["0-2", "3-5", "6-8", "9+"], @user.years_experience), {:include_blank => ""}
  .field
    .label-container What areas of TAP are you interested in getting involved with?
    .areas-of-interest
      %input.interest#community-service{ :type=>"checkbox", :name => "Community Service", :checked => @user.has_interest?("Community Service") }Community Service
    .areas-of-interest
      %input.interest#cultural{ :type=>"checkbox", :name => "Cultural", :checked => @user.has_interest?('Cultural') }Cultural
    .areas-of-interest
      %input.interest#dinner-group{ :type=>"checkbox", :name => "Dinner Group", :checked => @user.has_interest?('Dinner Group') }Dinner Group
    .areas-of-interest
      %input.interest#leadership{ :type=>"checkbox", :name => "Leadership", :checked => @user.has_interest?('Leadership') }Leadership
    .areas-of-interest
      %input.interest#professional{ :type=>"checkbox", :name => "Professional", :checked => @user.has_interest?('Professional') }Professional
    .areas-of-interest
      %input.interest#social{ :type=>"checkbox", :name => "Social", :checked => @user.has_interest?('Social') }Social
    .areas-of-interest
      %input.interest#other{ :type=>"checkbox", :checked => (!@user.other_interests.nil? && !@user.other_interests.blank?) }Other:
      %input.interest-text{ :type => "text", :name => "Areas of Interest", :value => "#{@user.other_interests}"}
  .field{ :style => "display: none"}
    = f.text_field :areas_of_interest
  .field
    .label-container What other community organizations are you a member of?
    = f.text_field :other_community_organizations
  .field
    .label-container Interested in becoming a mentor?
    = f.select :potential_mentor, options_for_select([["Yes", true], ["No", false]], @user.potential_mentor), {:include_blank => ""}
  .field
    .label-container Interested in becoming a mentee?
    = f.select :potential_mentee, options_for_select([["Yes", true], ["No", false]], @user.potential_mentee), {:include_blank => ""}
  .field
    .label-container Interested in helping with college workshops and career panels?
    = f.select :help_at_workshops_panels, options_for_select([["Yes", true], ["No", false]], @user.help_at_workshops_panels), {:include_blank => ""}
  .field
    .label-container
      The following information will be included in the Networking Directory: Name, Email, Schools Attended, Work Industry, Company Name, and Position. Do you want to be in the directory?
      %span.red-asterisk *
    = f.select :opt_in_directory,                                             |
      options_for_select([                                                    |
        ["Yes, add me - I'd like to network with other TAP members!", true],  |
        ["No - I do not wish to be included in the directory...", false]      |
      ], @user.opt_in_directory),                                             |
      {:include_blank => ""}                                                  |
  .actions
    = f.submit 'Save'
