= form_for @user_session, :url => login_path do |f|
  -if @user_session.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@user_session.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user_session.errors.full_messages.each do |msg|
          %li= msg
  
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.password_field :password
  .field    
    %input{ :type=>"checkbox", :name => "user_session[remember_me]", :value => 1 }Remember me
  .action
    = f.submit "Login"
    
  .login
    Not you? Signup 
    = link_to("here", :controller => 'users', :action => 'new')
